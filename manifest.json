  {
    "name": "Enhanced Medium Viewer",
    "version": "1.0",
    "description": "Read articles on medium.com without interruptions",
    "permissions": [
        "tabs",
        "cookies"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content.js"]
      }
    ],
    "manifest_version": 2
  }